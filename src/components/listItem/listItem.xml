<?xml version="1.0" encoding="utf-8" ?>
<component name="listItem" extends="Group">
    <interface>
        <field id="image" type="uri"/>
        <field id="type" type="string"/>
        <field id="duration" type="string"/> <!-- optional -->
        <field id="durationMiliseconds" type="integer"/> <!-- optional -->
        <field id="name" type="string"/>
    </interface>
    
	<script type="text/brightscript" uri="pkg:/components/listItem/listItem.brs" />
    <script type="text/brightscript" uri="pkg:/components/utils.brs"/>
	<children>
        <Poster
            id="image"
            uri="pkg:/images/channel-poster_sd.png"
            width="100"
            height="100"
            translation="[0,0]"
        />
        <Poster
            id="typeIcon"
            uri="pkg:/images/channel-poster_sd.png"
            width="20"
            height="20"
            translation="[0,0]"
        />
		<Label id="nameLabel"
			text="loream ipsum4"
			horizAlign="center"
			vertAlign="center"
        />
		<Label id="durationLabel"
			text="loream ipsum3"
			horizAlign="center"
			vertAlign="center"
        />
    </children>
</component>
